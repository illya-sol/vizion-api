{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "experimentalDecorators": true, 
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["scripts", "node_modules"]
}
